@model EmployeePerformanceApp.Models.LoginModel
@{
    ViewData["Title"] = "Login";

}

<link rel="stylesheet" type="text/css" href="~/css/login.css" />
<link rel="stylesheet" type="text/css" href="~/css/backgroundApp.css" />
<link rel="icon" type="image/x-icon" href="favicon.ico">
<body>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form">
            <h2>Sign in</h2>
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
            {
                <div class="input-form">
                    <strong>Error!</strong>
                    <p>@ViewData.ModelState["Error"].Errors.First().ErrorMessage</p>
                </div>
            }
            <div class="input-form">
                <input type="text" asp-for="Login" required placeholder="Login" />
                <span asp-validation-for="Login" />
            </div>
            <div class="input-form">
                <input asp-for="Password" required placeholder="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="input-form">
                <input type="submit" value="Sign in" />
            </div>
            <a href="#" class="forget">Forgot your password?</a>
        </div>
    </form>
</body>
